{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "label": "Create Terminals",
      "dependsOn": ["client", "server"],

      "group": {
        "isDefault": true
      },

      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "client",

      "type": "shell",
      "command": "cd client && npm run dev",

      "isBackground": true,
      "problemMatcher": [],

      "presentation": {
        "group": "my-group"
      }
    },
    {
      "label": "server",

      "type": "shell",
      "command": "cd server && npm start",

      "isBackground": true,
      "problemMatcher": [],

      "presentation": {
        "group": "my-group"
      }
    }
  ]
}
